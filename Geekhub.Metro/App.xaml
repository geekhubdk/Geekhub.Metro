<Application
    x:Class="Geekhub.Metro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Geekhub.Metro"
    xmlns:localData="using:Geekhub.Metro.Data">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">Geekhub</x:String>
			
			<LinearGradientBrush x:Key="ContainerGradient" EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Offset="0.091"/>
				<GradientStop Color="#FF0072BB"/>
			</LinearGradientBrush>

		</ResourceDictionary>
    </Application.Resources>
</Application>
